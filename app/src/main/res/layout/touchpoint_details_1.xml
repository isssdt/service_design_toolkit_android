<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.50"
    android:orientation="vertical">

    <TextView
        android:id="@+id/touchpoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Touchpoint Name"
        android:layout_marginTop="19dp"
        android:layout_marginRight="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/touchpoint_name"
        android:layout_alignStart="@+id/touchpoint_name" />

    <EditText
        android:id="@+id/touchpoint_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="false"
        android:layout_marginRight="19dp"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPostalAddress"
        android:text="Touchpoint"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_below="@+id/touchpoint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/touchpoint"
        android:layout_alignStart="@+id/touchpoint"
        android:layout_below="@+id/touchpoint_name"
        android:text="Using"
        android:layout_marginRight="19dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:text="Description"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginRight="19dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_below="@+id/channel"
        android:layout_alignLeft="@+id/channel"
        android:layout_alignStart="@+id/channel"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPostalAddress"
        android:text="Channel"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:id="@+id/action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/Name"
        android:focusable="false"
        android:text="What I need to do" />

    <EditText
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Name"
        android:layout_alignLeft="@+id/action_text"
        android:layout_alignRight="@+id/Name"
        android:layout_alignStart="@+id/action_text"
        android:layout_below="@+id/action_text"
        android:ems="10"
        android:focusable="false"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/expected_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="Expected time to complete"
        android:layout_below="@+id/action"
        android:layout_alignLeft="@+id/action"
        android:layout_alignStart="@+id/action"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/expected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Name"
        android:layout_alignLeft="@+id/action_text"
        android:layout_alignRight="@+id/Name"
        android:layout_alignStart="@+id/action_text"
        android:layout_below="@+id/expected_text"
        android:ems="10"
        android:focusable="false"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/action"
        android:layout_alignLeft="@+id/action_text"
        android:layout_alignRight="@+id/action"
        android:layout_alignStart="@+id/action_text"
        android:layout_below="@+id/expected"
        android:text="Rate the Experience" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="0.0"
        android:stepSize="1.0"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp"
        android:layout_below="@+id/rating_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
    <include layout="@layout/touchpoint_details_2"/>
<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_alignParentEnd="true"
android:layout_alignParentRight="true"
android:layout_alignParentTop="true"
android:layout_marginTop="10dp"
android:layout_weight="0.38"
android:orientation="horizontal"
android:weightSum="1">

<Button
    android:id="@+id/submit"
    android:layout_width="132dp"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="30dp"
    android:layout_marginStart="30dp"
    android:background="@drawable/buttonshape"
    android:shadowColor="@color/colorPrimary"
    android:text="Submit"
    android:textColor="@color/colorPrimary" />
</RelativeLayout>
    </LinearLayout>
    </ScrollView>