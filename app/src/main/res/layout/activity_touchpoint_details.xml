<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.21">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/channel"
                    android:layout_alignLeft="@+id/action_text"
                    android:layout_alignRight="@+id/channel"
                    android:layout_alignStart="@+id/action_text"
                    android:layout_below="@+id/textView5"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:text="Description" />

                <EditText
                    android:id="@+id/touchpoint_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignStart="@+id/textView4"
                    android:layout_below="@+id/touchpoint"
                    android:layout_marginRight="19dp"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="textPostalAddress"
                    android:text="Touchpoint" />

                <EditText
                    android:id="@+id/channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/touchpoint_name"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignRight="@+id/touchpoint_name"
                    android:layout_alignStart="@+id/textView4"
                    android:layout_below="@+id/textView4"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="textPostalAddress"
                    android:text="Channel" />

                <EditText
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/comment_text"
                    android:layout_marginRight="19dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:layout_alignLeft="@+id/comment_text"
                    android:layout_alignStart="@+id/comment_text" />


                <EditText
                    android:id="@+id/reaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/reaction_text"
                    android:layout_alignLeft="@+id/reaction_text"
                    android:layout_alignRight="@+id/reaction_text"
                    android:layout_alignStart="@+id/reaction_text"
                    android:layout_below="@+id/reaction_text"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <TextView
                    android:id="@+id/action_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView5"
                    android:layout_alignLeft="@+id/textView5"
                    android:layout_alignRight="@+id/textView5"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_below="@+id/Name"
                    android:focusable="false"
                    android:text="What I need to do"
                     />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/touchpoint"
                    android:layout_alignLeft="@+id/touchpoint"
                    android:layout_alignRight="@+id/touchpoint"
                    android:layout_alignStart="@+id/touchpoint"
                    android:layout_below="@+id/touchpoint_name"
                    android:text="Using"
                     />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/channel"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignRight="@+id/channel"
                    android:layout_alignStart="@+id/textView4"
                    android:layout_below="@+id/channel"
                    android:text="Description"
                     />

                <EditText
                    android:id="@+id/action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/Name"
                    android:layout_alignLeft="@+id/action_text"
                    android:layout_alignRight="@+id/Name"
                    android:layout_alignStart="@+id/action_text"
                    android:layout_below="@+id/action_text"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/action"
                    android:layout_alignLeft="@+id/action_text"
                    android:layout_alignRight="@+id/action"
                    android:layout_alignStart="@+id/action_text"
                    android:layout_below="@+id/action"
                    android:text="Rating"
                     />

                <TextView
                    android:id="@+id/comment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/reaction"
                    android:layout_alignLeft="@+id/reaction_text"
                    android:layout_alignRight="@+id/reaction"
                    android:layout_alignStart="@+id/reaction_text"
                    android:layout_below="@+id/reaction"
                    android:text="How I feel"
                     />

                <TextView
                    android:id="@+id/reaction_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/rating_text"
                    android:layout_alignLeft="@+id/rating_text"
                    android:layout_alignRight="@+id/rating_text"
                    android:layout_alignStart="@+id/rating_text"
                    android:layout_below="@+id/ratingBar"
                    android:text="What did I do"
                     />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="0.0"
                    android:stepSize="1.0"
                    android:layout_below="@+id/rating_text"
                    android:layout_alignLeft="@+id/rating_text"
                    android:layout_alignStart="@+id/rating_text" />

                <TextView
                    android:id="@+id/touchpoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Touchpoint Name"

                    android:layout_below="@+id/image"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="19dp"
                    android:layout_marginStart="19dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_camera"
                    android:id="@+id/photo1"
                    android:layout_below="@+id/rating_text"
                    android:layout_alignRight="@+id/rating_text"
                    android:layout_alignEnd="@+id/rating_text" />
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_weight="0.38"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/submit"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="@color/colorPrimary"
                android:text="Submit"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="@color/colorPrimary"
                android:text="Reset"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>
